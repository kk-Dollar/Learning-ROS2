<?xml version="1.0" ?>
<robot name="two_joints_robot" xmlns:xacro="http://www.ros.org/wiki/xacro" >
    <xacro:property name="black_color" value="0 0 0 1"/>
    <xacro:property name="white_color" value="1 1 1 1"/>

    <material name="black">
        <color rgba="${black_color}"/>
    </material>

    <material name="white">
        <color rgba="${white_color}"/>
    </material>
</robot>