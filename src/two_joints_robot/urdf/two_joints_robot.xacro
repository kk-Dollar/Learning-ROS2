<?xml version="1.0"?>
<robot name="two_joints_robot" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:include filename="$(find two_joints_robot)/urdf/two_joints_robot.ros2_control.xacro"/>
<xacro:include filename="$(find two_joints_robot)/urdf/two_joints_robot.gazebo"/>
<xacro:include filename="$(find two_joints_robot)/urdf/materials.xacro"/>

    <!-- Define materials -->
    <xacro:property name="black_color" value="0 0 0 1"/>
    <xacro:property name="white_color" value="1 1 1 1"/>

    <!-- World link -->
    <link name="world"/>

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.3 0.3 0.1" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 0.3 0.1" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.0025" ixy="0" ixz="0" iyy="0.0025" iyz="0" izz="0.005"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <!-- Fixed joint to world -->
    <joint name="world_to_base" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="world"/>
        <child link="base_link"/>
    </joint>

    <!-- Revolute joint -->
    <joint name="base_joint" type="continuous">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin rpy="0 0 0" xyz="0 0 0.4"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Link1 -->
    <link name="link1">
        <visual>
            <geometry>
                <cylinder length="0.8" radius="0.03"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.8" radius="0.03"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
            <origin xyz="0 0 0.4" rpy="0 0 0"/>
        </inertial>
    </link>

    <!-- Prismatic joint -->
    <joint name="link1_link2" type="prismatic">
        <parent link="link1"/>
        <child link="link2"/>
        <origin rpy="0 0 0" xyz="0 0 0.43"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="-0.3" upper="0.3" velocity="0.5"/>
    </joint>

    <!-- Link2 -->
    <link name="link2">
        <visual>
            <geometry>
                <cylinder length="0.6" radius="0.03"/>
            </geometry>
            <origin rpy="0 1.57 0" xyz="0 0 0.0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.6" radius="0.03"/>
            </geometry>
            <origin rpy="0 1.57 0" xyz="0 0 0.0"/>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
            <origin xyz="0 0 0.3" rpy="0 0 0"/>
        </inertial>
    </link>

</robot>    